{
  "name": "vibecheck",
  "version": "0.3.0",
  "private": true,
  "type": "module",
  "bin": {
    "vibecheck": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsx src/cli.ts scan . --stack auto --auth auto",
    "start": "node dist/cli.js",
    "test:smoke": "node dist/cli.js --help"
  },
  "dependencies": {
    "@babel/parser": "^7.26.0",
    "@babel/traverse": "^7.26.0",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "fast-glob": "^3.3.2",
    "ignore": "^5.3.2"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/babel__traverse": "^7.20.6",
    "tsx": "^4.19.0",
    "typescript": "^5.4.0"
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "security",
    "cli",
    "static-analysis",
    "nextjs",
    "prisma",
    "nest",
    "vite"
  ],
  "license": "MIT",
  "description": "A lightweight codebase checker CLI that scans repos for common security footguns across: Next.js (App Router), Vite, NestJS, and Prisma (heuristics).",
